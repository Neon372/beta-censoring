{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "strict": true,
      "jsx": "preserve",
      "importHelpers": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "allowSyntheticDefaultImports": true,
      "inlineSourceMap": true,
      "noImplicitAny": false,
      "baseUrl": ".",
      "types": [
        "naive-ui/volar"
      ],
      "paths": {
        "@/*": [
          "./*"
        ],
        "#/*": [
          "node_modules/@silveredgold/beta-shared/*"
        ]
      },
      "lib": [
        "esnext",
        "dom",
        "dom.iterable",
        "scripthost"
      ]
    },
    "include": [
      "./**/*.ts",
      "./**/*.vue"
    ],
    "exclude": [
      "node_modules"
    ]
  }